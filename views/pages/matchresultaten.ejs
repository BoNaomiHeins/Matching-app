<%- include('../partials/head'); %>

<body id="matchresultaten">
    <%- include('../partials/nav'); %>

    <h1>Foundation advies</h1>
    <p>voor <%= antwoorden.name %></p>

    <form id="update"  method="POST" action="/update">
        <input type="hidden" name="userID" id="userID" value="<%= antwoorden.userID %>">
        <div class="container-name">
        <input type="text" name="name" value="<%= antwoorden.name %>">
        </div>
        <div class="container-prijs">
        <input type="number" name="maxPrijs" value="<%= antwoorden.maxPrijs %>">
        <p>€</p>
        </div>
        <input type="submit" class="submit">
    </form>
    
    <section>
        <% foundation.forEach(foundation => { %>
            <article>
                <h2 class="titel"><%= foundation.name %></h2>
                <p class="merk"><%= foundation.brand %></p>
                <p class="prijs">€<%= foundation.price %></p>
            </article>
        <% }) %>
</section>
</body>
</html>